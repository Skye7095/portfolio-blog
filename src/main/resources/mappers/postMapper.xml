<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.portfolio.blog.post.dao.PostDAO">
	
	<!-- 전체 글 조회 -->
	<select id="selectAllPostList" parameterType="int">
		SELECT 
			`id`
			, `userId`
			, `author`
			, `title`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY
			`id` DESC;
	</select>
	
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `author`
			, `title`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{author}
			, #{title}
			, #{content}
			, now()
			, now()
		)		
	</insert>
</mapper>
